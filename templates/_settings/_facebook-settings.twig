{% extends "_layouts/cp" %}
{% import '_includes/forms' as forms %}

{% set fullPageForm = true %}

{% set title = "Social Feed - Facebook Settings"|t %}

{% set selectedTab = 'facebook' %}

{% set content %}

    {% if craft.app.version < 2.5 %}
        <form id="site-form" method="post" accept-charset="UTF-8" data-saveshortcut="1" data-saveshortcut-redirect="{{ continueEditingUrl }}">
    {% endif %}

        {{ getCsrfInput() }}
        <input type="hidden" name="action" value="socialFeed/facebook/saveFacebookSettings" />

        {{ forms.textField({
            first:        true,
            label:        "Facebook Page Name"|t,
            required:     true,
            id:           'facebookPageName',
            instructions: "Enter your Facebook page's name."|t,
            autofocus:    true,
            name: 'facebookPageName',
            value: settings.facebookPageName
        }) }}

        {{ forms.textField({
            first:        true,
            label:        "Facebook App ID"|t,
            required:     true,
            id:           'facebookAppId',
            instructions: "Enter your Facebook App ID."|t,
            name: 'facebookAppId',
            value: settings.facebookAppId
        }) }}

        {{ forms.textField({
            first:        true,
            label:        "Facebook App Secret"|t,
            required:     true,
            id:           'facebookAppSecret',
            instructions: "Enter your Facebook App Secret."|t,
            name: 'facebookAppSecret',
            value: settings.facebookAppSecret
        }) }}

        {{ forms.textField({
            first:        true,
            label:        "Facebook Feed Limit"|t,
            required:     false,
            id:           'facebookFeedLimit',
            instructions: "Enter your Facebook Access Token."|t,
            name: 'facebookFeedLimit',
            value: settings.facebookFeedLimit
        }) }}

        <!-- Needed for for Craft < 2.5 -->
        {% if craft.app.version < 2.5 %}
            <div class="item" data-position="left" data-colspan="1">
                <div class="buttons">
                    <div class="btngroup submit first">
                        <input type="submit" class="btn submit" value="{{ 'Save'|t }}">
                    </div>
                </div>
            </div>
        {% endif %}

    {% if craft.app.version < 2.5 %}
        </form>
    {% endif %}

{% endset %}